<!DOCTYPE html>
<html lang="en">
@{
    await Html.RenderPartialAsync("_Head");
}
<style>
footer .bi{
     font-size:18px;
     color: unset;
}
</style>
<body>
    <header class="p-3 border-bottom" style="background: #062146;">
        <img src="img/logo.png" style="height: 40px; margin: auto; display: block; ">

        <i class="bi bi-bell-fill" style="color: white; float: right; margin-top: -33px;"></i>
    </header>

    @RenderBody()

    <footer class="container-fluid" style="color: #474747; font-weight:500; padding: 0; padding-bottom:5px; position: fixed; bottom: 0px; background: white; font-size:10px; text-align: center">
        <div class="row">
            <div style="padding:0; width: 20.8333334%; flex: 0 0 auto; color:#062146;">
                <i class="bi bi-house-fill" style="padding:0; margin-left: 0px;"></i><br />
                Ana Sayfa
            </div>
            <div style="padding:0; width: 20.8333334%; flex: 0 0 auto;">
                <i class="bi bi-credit-card-fill" style="padding:0; margin-left: 0px;"></i><br />
                Hesap ve Kart
            </div>
            <div class="col-2" style="padding:0;">
                <i class="bi bi-plus-circle-fill" style="padding:0; margin-left: 0px;"></i><br />
                Başvurular
            </div>
            <div style="padding:0; width: 20.8333334%; flex: 0 0 auto;">
                <i class="bi bi-person-lines-fill" style="padding:0; margin-left: 0px;"></i><br />
                İşlemler
            </div>
            <div style="padding:0; width: 20.8333334%; flex: 0 0 auto;">
                <i class="bi bi-pie-chart-fill" style="padding:0; margin-left: 0px;"></i><br />
                Durumum
            </div>
        </div>
    </footer>
    @{
        await Html.RenderPartialAsync("_Scripts");
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
