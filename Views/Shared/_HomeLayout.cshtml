<!DOCTYPE html>
<html lang="en">
@{
    await Html.RenderPartialAsync("_Head");
}
<body>
    <header class="border-bottom" style="background: #fff; z-index: 1; position: relative; box-shadow: 0px 0px 3px 0px rgba(0, 0, 0, 0.5); border-bottom: none !important;">
        <img src="img/logo.png" style="height: 60px; margin: auto; display: block;">

        <div style="padding: 10px; background: #062146; color: white; border-radius: 50px; width: 40px; margin: auto; float: right; margin-top: -50px; margin-right:20px; text-align: center;">
            <i class="bi bi-bell-fill"></i>
        </div>
        <div style="font-weight: 500; padding: 4px; font-size: 8px; background: red; color: white; border-radius: 50px; width: 20px; height: 20px; margin: auto; float: right; margin-top: -55px; margin-right:15px; text-align: center;">
            0
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            @{
                await Html.RenderPartialAsync("_Sidebar");
            }
            @RenderBody()
        </div>
    </div>

    
    @{
        await Html.RenderPartialAsync("_Scripts");
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
